#pragma once

#ifndef _H2O_HXX
#define _H2O_HXX 1

namespace h2o
{
	namespace internals
	{
#		include <h2o/boundaries.h>
	};

	class H2O
	{
		double _arg1, _arg2;
		enum internals::h2o_region _region;

		H2O();
	public:
		H2O(double p, double T);
		static H2O Tx(double T, double x);
		static H2O ph(double p, double h);
		static H2O ps(double p, double s);
		static H2O rhoT(double rho, double T);

		double p() const;
		double T() const;
		double x() const;
		double rho() const;

		double v() const;
		double u() const;
		double h() const;
		double s() const;
	};
};

#endif /*_H2O_HXX*/

